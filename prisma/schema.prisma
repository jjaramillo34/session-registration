generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // Needed for Prisma Client to work in Edge functions
  directUrl = env("DIRECT_URL")
  // Handle lack of foreign key constraint support in some DB providers
  relationMode = "prisma"
}

model TimeSlot {
  id          Int      @id @default(autoincrement())
  date        String
  time        String
  capacity    Int      @default(2)  // Default capacity of 2 programs per slot
  available   Boolean  @default(true)
  sessionType String   // 'daytime' or 'evening'
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([date, time])
  @@index([date, time])
  @@index([sessionType])
  @@index([available])
}

model Session {
  id           Int      @id @default(autoincrement())
  name         String
  email        String
  programName  String
  sessionDate  String
  sessionTime  String
  sessionType  String   // 'daytime' or 'evening'
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([email])
  @@index([sessionDate, sessionTime])
  @@index([sessionType])
} 